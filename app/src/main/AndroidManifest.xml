<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.informationbook">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/information"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/information_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InformationBook">
        <activity
            android:name=".activities.wondersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.museumActivity"
            android:exported="false" />
        <activity
            android:name=".activities.leaderActivity"
            android:exported="false" />
        <activity
            android:name=".activities.countriesActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.InformationBook">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>